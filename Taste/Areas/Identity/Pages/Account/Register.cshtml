@page
@model RegisterModel
@using Taste.Utility
@{
	ViewData["Title"] = "Register";
}
<form method="post" autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl">
	<div class="my-4 py-4">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="col-8 offset-2">
			<div class="card">
				<div class="card-body px-lg-5 pt-4">
					<h3 class="col-12 text-success text-center py-4"><strong>Sign Up</strong></h3>
					<hr />
					<div class="row py-2">
						<div class="col-6">
							<div>
								<input type="text" asp-for="Input.FirstName" autocomplete="off" class="form-control" placeholder="First Name" />
								<span asp-validation-for="Input.FirstName" class="text-danger"></span>
							</div>
						</div>
						<div class="col-6">
							<div>
								<input type="text" asp-for="Input.LastName"autocomplete="off" class="form-control" placeholder="Last Name" />
								<span asp-validation-for="Input.LastName" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="py-2">
						<input type="email" asp-for="Input.Email"autocomplete="off" class="form-control" placeholder="Email" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="py-2">
						<input type="text" asp-for="Input.PhoneNumber" autocomplete="off"class="form-control" placeholder="Phone Number" />
						<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
					</div>					
					<div class="py-2">
						<input type="password" asp-for="Input.Password"autocomplete="off"  class="form-control" placeholder="Password" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>					
					<div class="py-2">
						<input type="password" asp-for="Input.ConfirmPassword" autocomplete="off"class="form-control" placeholder="Confirm Password" />
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>	
					<div class="py-2">
						<div class="custom-control custom-radio custom-control-inline">
						<input type="radio" class="custom-control-input" id="@SD.ForntDeskRole" name="raUserRole" value="@SD.ForntDeskRole" /> <label for="@SD.ForntDeskRole" class="custom-control-label"> @SD.ForntDeskRole</label>
						</div>
						<div class="custom-control custom-radio custom-control-inline">
						<input type="radio" class="custom-control-input" name="raUserRole"id="@SD.ManagerRole" value="@SD.ManagerRole" />  <label for="@SD.ManagerRole" class="custom-control-label">@SD.ManagerRole</label>
						</div>
						<div class="custom-control custom-radio custom-control-inline">
						<input type="radio" class="custom-control-input" name="raUserRole"id="@SD.kitchenRole" value="@SD.kitchenRole" />  <label for="@SD.kitchenRole" class="custom-control-label"> @SD.kitchenRole</label>
						</div>
						<div class="custom-control custom-radio custom-control-inline">
						<input type="radio" class="custom-control-input " name="raUserRole"id="@SD.CustomerRole" value="@SD.CustomerRole" />  <label for="@SD.CustomerRole" class="custom-control-label">@SD.CustomerRole</label>
					</div>
					</div>
					<div class="py-2">
						<input type="submit" value="Register" class="btn btn-primary px-3" />
					</div>
					<hr>
					<div class="py-2">
						<p>By Clicking to register Button you are agreed to our <a href="#">Term of service</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
	
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h4>Use another service to register.</h4>
			<hr />
			@{
				if ((Model.ExternalLogins?.Count ?? 0) == 0)
				{
					<div>
						<p>
							There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
							for details on setting up this ASP.NET application to support logging in via external services.
						</p>
					</div>
				}
				else
				{
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
						<div>
							<p>
								@foreach (var provider in Model.ExternalLogins)
								{
									<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
								}
							</p>
						</div>
					</form>
				}
			}
		</section>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
